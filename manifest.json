{
  "manifest_version": 3,
  "name": "Scroll Controls",
  "version": "1.0",
  "description": "Customizable scroll controls with settings",
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "css": ["arrows.css"]
  }],
  "permissions": ["storage"],
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": false
  },
  "icons": {
    "48": "icon.png"
  }
}